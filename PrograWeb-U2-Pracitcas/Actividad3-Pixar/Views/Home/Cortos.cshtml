@model Actividad3_Pixar.Models.CortosViewModel
@{
    Layout = "_Layout";
}

<header>
    <nav class="menuHorizontal">
        <a href="~/Home/Index">
            <img id="logo" src="~/images/Disney_pixar.png">
        </a>
        <ul>
            <li>
                <a href="~/Home/Index">Inicio</a>
            </li>
            <li >
                <a href="~/peliculas">Películas</a>
            </li>

            <li class="selected">
                <a href="~/cortos">Cortometrajes</a>
            </li>
        </ul>
    </nav>
</header>
<main>
    <div id="principalPeliculas">
        <div id="pelis">
            @foreach (var cat in Model.Categoria)
        {
            <h1>@cat.Nombre</h1>
            @foreach (var c in cat.Cortometraje)
            {
                <div>
                    <a class="imgPelicula" href="~/cortos/@c.Nombre.Replace(" ", "-")">
                        <img src="~/images/portadas/@(c.Id)_pc.jpg" alt="@c.Nombre">
                    </a>
                    <div class="nombrePelicula">
                        <p>@c.Nombre</p>
                    </div>
                </div>
            }

           
            }


        </div>
    </div>
</main>


